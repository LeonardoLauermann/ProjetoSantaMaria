@model TrabalheConosco
@{
    ViewData["Title"] = "Trabalhe Conosco";
}
<h1>@ViewData["Title"]</h1>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/arquivo.css" />
</head>

<body background="/imagens/background.jpg">    

<form method="POST">
    <p>Nome Completo: <input type="text" required class="name" placeholder="Pedro Henrique" asp-for="NomeCompleto"></p>
    <p>Número: <input type="number" required class="number" placeholder="51999999999" asp-for="Numero"></p>
    <p>E-mail: <input type="email" required class="email" placeholder="exemplo@gmail.com" asp-for="Email"></p>
    <p>Currículo: <input type="file" id="arquivo"> </p>
    <input type="submit">
</form>

<a asp-action="TrabalheConoscoResultados"> Ver Resultados </a>

</body>
</html>


